<style>

.head {
 margin-left: 42%;
  margin-top: 20px;
  position: relative;
  width: 160px;
}
.face {
  position: relative;
  top: 0;
  background: #5191e1;
  width: 160px;
  height: 200px;
  border-radius: 100% 100% 95% 95%;
}
.face .ears .left,
.face .ears .right {
  position: absolute;
  top: 50%;
  margin-top: -10px;
  background: #5191e1;
  width: 30px;
  height: 40px;
  border-top-left-radius: 20px;
  border-bottom-left-radius: 20px;
}
.face .ears .left {
  left: -18px;
}
.face .ears .right {
  right: -18px;
  transform: rotateZ(180deg);
}
.face .eyes .left,
.face .eyes .right {
  position: absolute;
  top: 100px;
  margin-top: -6px;
  background: #fff;
  width: 12px;
  height: 12px;
  border-radius: 10px;
  animation: blink 3s infinite;
}
.face .eyes .left {
  left: 30%;
}
.face .eyes .right {
  right: 30%;
}
.face .mouth {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -20px;
  margin-top: 50px;
  background: #eab29e;
  width: 40px;
  height: 20px;
  border-radius: 20px;
}
@keyframes blink {
  4% {
    height: 0;
  }
  5% {
    height: 12px;
  }
  100% {
    height: 12px;
  }
}

</style>
<h1>{{title}}</h1>

<div id = "headcontainer">

<div class="head">
  <div class="face">
    <div class="ears">
      <div class="left"></div>
      <div class="right"></div>
    </div>
    <div class="eyes">
      <div class="left"></div>
      <div class="right"></div>
    </div>
    <div class="nose"></div>
    <div class="mouth"></div>
  </div>
</div>
</div>

